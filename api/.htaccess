RewriteEngine On

# Toutes les requêtes non-fichier sont routées vers index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.php [QSA,L]

# Bloquer l'accès aux fichiers de configuration PHP
<FilesMatch "(config\.local\.php|\.example)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
